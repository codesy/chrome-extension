{
  "manifest_version": 2,
  "name": "codesy.io",
  "description": "codesy is a pay-what-you-want market for the open source community to encourage coders to fix important bugs.",
  "version": "2.0",
  "bid_domain" : "api.codesy.io",
  "permissions": [
    "https://api.codesy.io/",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "web_accessible_resources": [
      "js/jquery-2.0.3.min.js",
      "js/jquery-2.0.3.min.map"
  ],
  "background": {
    "scripts": ["js/codesy_xhr.js"],
    "persistent": false
  },
  "content_scripts" : [
    { "matches" : ["*://*.github.com/*"],
      "js" : [
        "js/jquery-2.0.3.min.js",
        "js/codesy.js"
      ],
      "all_frames" : true
    },
    { "matches" : 
        ["*://*.codesy.io/*"],
      "js" : [
        "js/jquery-2.0.3.min.js",
        "js/codesy_token.js"
      ],
      "all_frames" : true
    }    
  ]
}

