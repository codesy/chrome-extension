{
  "manifest_version": 2,

  "name": "codesy.io",
  "description": "codesy is a pay-what-you-want market for the open source community to encourage coders to fix important bugs.",
  "version": "1.0",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
   "128": "img/icon128.png"
  },

  "options_page": "options.html",

  "permissions": [
    "https://codesy.io/",
    "https://codesy-dev.herokuapp.com/",
    "https://mysterious-badlands-8311.herokuapp.com/",
    "storage",
    "tabs",
    "webNavigation"
  ],

  "web_accessible_resources": [
      "js/jquery-2.0.3.min.js",
      "js/jquery-2.0.3.min.map"
  ],
  "background": {
    "scripts": ["js/watch_xhr.js"],
    "persistent": false
  
  },
  "content_scripts" : [
    {
      "matches" : ["*://*.github.com/*"],
      "css" : [
        "css/codesy.css"
      ],
      "js" : [
        "js/jquery-2.0.3.min.js",
        "js/codesy.js"
      ],
      "run_at" : "document_idle",
      "all_frames" : true
    }
  ]

}

